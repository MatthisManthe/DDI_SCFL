{
    "device": "cuda:0",
    
    "datasets": "both",
    "data_dir_cityscapes": "../../datasets/Cityscapes_test",
    "data_dir_gta": "../../datasets/GTA5_train_val_test",
    "labels": "categories",
    "cache_dir": "../../cache_dir",
    "log_dir": "../../runs",
    "log_filename": "EfficientVIT_both_datasets_final",
    
    "sort": true,
    "cache": true,
    
    "save_epochs": [30, 50, 100, 200],
    
    "prop_full_dataset": 1.0,
    "ratio_train": 0.8,
    
    "max_epochs": 300,
    "nb_gpus": 1,
    "batch_size_per_gpu": 2,
    
    "dropout": 0.1,
    
    "norm": "ln2d",

    "optim":"adam",
    "learning_rate": 0.001,
    "momentum": 0.9,
    "weight_decay": 1e-6,
    
    "lr_scheduler": "exp_decay",
    "gamma": 0.995,
    
    "validation_interval": 1,
    "print_predictions": true,
    "print_validation_interval": 20,
    
    "size": [512, 1024]
}
