{
    "device": "cuda:0",
    
    "data_dir_cityscapes": "../../datasets/Cityscapes",
    "data_dir_gta": "../../datasets/GTA5_train_val",
    "labels": "trainId",
    "cache_dir": "../../cache_dir",
    "log_dir": "../../runs",
